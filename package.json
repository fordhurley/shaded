{
  "name": "shaded",
  "description": "glsl fragment shader viewer and browser",
  "author": {
    "name": "Ford Hurley",
    "email": "ford.hurley@gmail.com",
    "url": "https://fordhurley.com/"
  },
  "repository": "github:fordhurley/shaded",
  "license": "MIT",
  "engines": {
    "node": ">=10.10.0"
  },
  "version": "1.0.2",
  "bin": "./server/index.js",
  "scripts": {
    "postinstall": "yarn run server-build && yarn run rollup-build",
    "server-build": "tsc --build src/server/tsconfig.json",
    "server-watch": "yarn run server-build --watch",
    "rollup-build": "rollup -c src/frontend/rollup.config.js",
    "rollup-watch": "rollup -c src/frontend/rollup.config.js --watch",
    "prettier-check": "prettier ./src/server/*.ts ./src/frontend/*.js ./src/frontend/*/*.js --check",
    "prettier-fix": "prettier ./src/server/*.ts  ./src/frontend/*.js ./src/frontend/*/*.js --write"
  },
  "dependencies": {
    "chokidar": "^2.1.2",
    "express": "^4.16.4",
    "glslify": "^7.0.0",
    "minimist": "^1.2.0",
    "open": "^6.0.0",
    "rollup": "^1.6.0",
    "rollup-plugin-node-resolve": "^4.0.1",
    "shader-canvas": "^0.8.1",
    "typescript": "^3.3.4000",
    "ws": "^6.2.0"
  },
  "devDependencies": {
    "@types/express": "^4.16.1",
    "@types/minimist": "^1.2.0",
    "@types/open": "^6.0.0",
    "@types/ws": "^6.0.1",
    "prettier": "^1.16.4"
  }
}
